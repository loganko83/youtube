# TubeGenius AI - Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================================
# Database
# ============================================================
POSTGRES_USER=tubegenius
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=tubegenius
POSTGRES_PORT=5432
DATABASE_URL=postgresql://tubegenius:your_secure_password_here@localhost:5432/tubegenius

# ============================================================
# Redis
# ============================================================
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ============================================================
# Authentication
# ============================================================
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters
JWT_EXPIRES_IN=24h

# ============================================================
# n8n Workflow Engine
# ============================================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_USER=admin
N8N_PASSWORD=your_n8n_password
N8N_WEBHOOK_URL=http://localhost:5678
N8N_WEBHOOK_SECRET=your_webhook_secret

# ============================================================
# Google Gemini API
# ============================================================
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================
# ElevenLabs TTS (Optional - for voice generation)
# ============================================================
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# ============================================================
# YouTube API (Optional - for upload feature)
# ============================================================
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REDIRECT_URI=http://localhost:3000/api/auth/youtube/callback

# ============================================================
# Video Rendering (Optional)
# ============================================================
CREATOMATE_API_KEY=your_creatomate_api_key

# ============================================================
# Application
# ============================================================
NODE_ENV=development
API_PORT=4000
WEB_PORT=3000
CORS_ORIGIN=http://localhost:3000
