# Database
DATABASE_URL="postgresql://user:password@localhost:5432/tubegenius"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="7d"

# API Keys
GEMINI_API_KEY="your-gemini-api-key"
ELEVENLABS_API_KEY="your-elevenlabs-api-key"

# Google OAuth (YouTube Integration)
# Get these from: https://console.cloud.google.com/
# 1. Create OAuth 2.0 credentials
# 2. Enable YouTube Data API v3
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-client-secret"

# Optional: Token encryption key (32-byte hex string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ENCRYPTION_KEY="your-32-byte-encryption-key-in-hex"

# Storage
STORAGE_PATH="./storage/audio"

# Server
PORT=3001
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:3000"
